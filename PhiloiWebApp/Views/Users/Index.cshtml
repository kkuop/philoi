@model IEnumerable<PhiloiWebApp.Models.Categories>

@{
    ViewData["Title"] = "Index";
}

<h1>Homepage</h1>

<p>
    <a asp-action="Edit">Edit Info</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoriesId)
            </th>
           
           
           <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoriesId)
)
            </td>
          
           
         
            <td>
                <a asp-action="Edit" asp-route-id="@item.CategoriesId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CategoriesId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CategoriesId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
