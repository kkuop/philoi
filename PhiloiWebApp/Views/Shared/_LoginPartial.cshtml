@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

    <ul class="navbar-nav mr-auto">
        @if (SignInManager.IsSignedIn(User))
        {
            <li class="nav-item active">
                <a class="nav-link" href="~/css/bootstrap.min.css" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!<span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item">
                <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
                </form>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="~/css/bootstrap.min.css" asp-area="" asp-controller="User" asp-action="Index">Profile</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="~/css/bootstrap.min.css" asp-area="" asp-controller="User" asp-action="Search">Search</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="~/css/bootstrap.min.css" asp-area="" asp-controller="User" asp-action="Edit">Edit</a>
            </li>
        }
        else
        {
            <li class="nav-item">
                <a class="nav-link" href="~/css/bootstrap.min.css" asp-area="Identity" asp-page="/Account/Register">Register</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="~/css/bootstrap.min.css" asp-area="Identity" asp-page="/Account/Login">Login</a>
            </li>
        }
    </ul>
